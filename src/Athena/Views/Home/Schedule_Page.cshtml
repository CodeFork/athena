    @section scripts {



        <script type="text/javascript">

            function changesymbol(elmnt, crsID, crsTitle, startTime, endTime, days) {
                var event = {
                    id: crsID, title: crsTitle, start: startTime, end: endTime, dow: days};
                    $('#calendar').fullCalendar('renderEvent', event, false);
                    $(elmnt.parentElement).fadeOut(400);
                }
        </script>

        <script type="text/javascript">
            $('#first').collapsible('accordion-open', {
                /* Speeds for opening */
                accordionUpSpeed: 400,
                accordionDownSpeed: 400,
                collapseSpeed: 400,
                /* Default pane open, if any */
                contentOpen: 1,
                /* Classes for dropdown arrow */
                arrowRclass: 'arrow-r',
                arrowDclass: 'arrow-d',
                animate: true
            });
        </script>



        <script type="text/javascript">
            var names = [];

            function displayUserName() {
                var newterm = false;
                var theName = document.getElementById("enter").value;
                if (theName == "" || theName.length == 0) {
                    return false; //stop the function since the value is empty.
                }
                names.push(theName);

                document.getElementById("name").children[0].innerHTML += "<li>" + names[names.length - 1] + "</li>";
            }
        </script>

        <script type="text/javascript">
            $(document).ready(function () {
                // page is now ready, initialize the calendar...
                $('#calendar').fullCalendar({
                    // put your options and callbacks here
                    defaultView: "agendaWeek",
                    minTime: "07:00:00",
                    maxTime: "22:00:00",
                    allDaySlot: false,
                    slotDuration: "1:00",
                    slotWidth: 2,
                    height: "auto",
                    header: false,
                    columnFormat: 'ddd',
                    eventClick: function (event) {
                        $('#calendar').fullCalendar('removeEvents', event.id);
                        $(document.getElementById(event.id).parentElement).fadeIn(400);
                    }
                });
                $('#calendar').fullCalendar('next');
                $('#calendar').fullCalendar('render');
            });
        </script>
    }


