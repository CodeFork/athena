@{
    ViewData["Title"] = "User_Page";
}
<br /><br /><br />
<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s3"><a href="#student">Student</a></li>
            <li class="tab col s3"><a href="#schedule">Schedule</a></li>
        </ul>
    </div>
</div>
<div class="row">
    <div id="student" class="col s12">
        <br /><br />
        <div class="row">
            <div class="col s2">
                <h4>Degree Progress:</h4>
            </div>
            <div class="col s4 offset-s2">
                <div id="progress-bar" class="all-rounded">
                    <div id="progress-bar-percentage" class="all-rounded" style="width: 68%"><span>68/100</span></div>
                </div>
            </div>
            <div class="col s2 offset-s1">
                <h5>ETC:</h5>
                <h6>??/??/????</h6>
            </div>
        </div>


        <table class="striped bordered">
            <thead>
                <tr>
                    <th>Course</th>
                    <th>Number</th>
                    <th>Term</th>
                    <th>University</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>Calculus I</td>
                    <td>1003</td>
                    <td>Spring</td>
                    <td>LCCC</td>
                </tr>
                <tr>
                    <td>Physics</td>
                    <td>2105</td>
                    <td>Fall</td>
                    <td>Lorain County Community College</td>
                </tr>
                <tr>
                    <td>Programming</td>
                    <td>3562</td>
                    <td>Summer</td>
                    <td>University of Toledo</td>
                </tr>
                <tr>
                    <td>English</td>
                    <td>1452</td>
                    <td>Summer</td>
                    <td>UT</td>
                </tr>
                <tr>
                    <td>Geography</td>
                    <td>1324</td>
                    <td>Fall</td>
                    <td>Cleveland State University</td>
                </tr>
            </tbody>
        </table>


        <br /><br />
        <div class="row">
            <a href="Schedule_Page" class="btn col s2 offset-s1">New Schedule</a>
            <a href="Add_Classes" class="btn col s2 offset-s1">Complete Classes</a>
        </div>
    </div>
</div>

<div class="row">
    <div id="schedule" class="col s12">

        <div class="card">
            <div class="card-content">
                <h4>Weekly Schedule:</h4>
                <div id='calendar'></div>
            </div>
            <a class="btn-floating halfway-fab waves-effect waves-light blue darken-4"><i class="material-icons">print</i></a>
        </div>

    </div>
</div>



@section scripts {
    <script>
        $(document).ready(function () {
            // page is now ready, initialize the calendar...
            $('#calendar').fullCalendar({
                // put your options and callbacks here
                defaultView: "agendaWeek",
                minTime: "07:00:00",
                maxTime: "22:00:00",
                allDaySlot: false,
                slotDuration: "1:00",
                height: "auto",
                header: false,
                columnFormat: 'ddd',
            });

            $('#calendar').fullCalendar('next');


        });
    </script>

}